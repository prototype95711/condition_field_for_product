<?xml version="1.0"?>
<addon scheme="3.0">
    <id>condition_field_for_product</id>
    <name>Condition field for products</name>
    <description>Adds a field to products with a mark about their condition.</description>

    <default_language>ru</default_language>

    <queries>
        <item>
            ALTER TABLE `?:products`
                ADD `product_condition_value` varchar(32)
        </item>
        <item for="uninstall">
            ALTER TABLE `?:products`
                DROP COLUMN `product_condition_value`;
        </item>
    </queries>
    
</addon>